{
  "extends": "airbnb",
  "installedESLint": true,
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "meteor": true
  },
  "globals": {
    // mocha globals
    "describe": true,
    "context": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "it": true,
    "expect": true,

    "SignaturePad": true,

    "Sortable": true,
    "OAuth": true,
    "moment": true,
    "HomeConfig": true,
    "adminCollectionObject": true,
    "AccountsTemplates": true,
    "Roles": true,
    "RouteController": true,
    "HomeHelpers": true,
    "AutoForm": true,
    "SimpleSchema": true,
    "Gravatar": true,
    "AdminTables": true,
    "MeteorCamera": true,
    "Geolocation": true,
    "GoogleMaps": true,
    "google": true,
    "LocationTracker": true,
    "is": true,
    "defaultColumns": true,
    "Tabular": true,
    "adminCollections": true,
    "AppController": true,
    "AdminLTEOptions": true,
    "ResponseHelpers": true,
    "spdatScoreHelpers": true,
    "singleHMISUser": true,
    "hmisQuesSync": true,
    "hmisSurveySync": true,
    "responseHmisHelpers": true,
    "globalHouseholdsHelpers": true,
    "referralStatusHelpers": true,
    "Bert": true
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_redirectUri"
        ]
      }
    ],
    "import/no-unresolved": ["error", { "ignore": ["^meteor/", "^/"] }]
  }
}
