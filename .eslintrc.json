{
  "extends": "airbnb",
  "installedESLint": true,
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "meteor": true,
    "mocha": true
  },
  "globals": {
    "chai": true,
    "AccountsTemplates": true,
    "AutoForm": true,
    "Bert": true,
    "google": true,
    "GoogleMaps": true,
    "Gravatar": true,
    "is": true,
    "LocationTracker": true,
    "moment": true,
    "MeteorCamera": true,
    "OAuth": true,
    "Roles": true,
    "RouteController": true,
    "SignaturePad": true,
    "SimpleSchema": true,
    "Sortable": true,

    "AdminLTEOptions": true,
    "ResponseHelpers": true,
    "spdatScoreHelpers": true,
    "hmisQuesSync": true,
    "hmisSurveySync": true,
    "responseHmisHelpers": true
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_redirectUri"
        ]
      }
    ],
    "import/no-unresolved": ["error", { "ignore": ["^meteor/", "^/"] }],
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off"
  }
}
